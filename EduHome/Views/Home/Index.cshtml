<!-- About Start -->
<div class="about-area pb-135 pt-130 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>@Html.Raw(@Model.About.Title)</h2>
                    <p>@Model.About.Description</p>
                    <a class="default-btn" href="about.html">buy now</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="~/img/about/@Model.About.Photo" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Event Area Start -->
<div class="event-area three text-center pt-100 pb-115">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/img/icon/section.png" alt="section-title">
                    <h2>UPCOMMING EVENTS</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Event evnt in Model.Events)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-event mb-35">
                        <div class="event-img">
                            <a asp-controller="Event" asp-action="Detail" asp-route-id="@evnt.ID">
                                <img src="~/img/event/@evnt.Photo" alt="event">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                            <div class="event-date">
                                <h3><span> @evnt.DateTime</span></h3>
                            </div>
                        </div>
                        <div class="event-content text-left">
                            <h4><a asp-controller="Event" asp-action="Detail">ADVANCE PHP WORKSHOP</a></h4>
                            <ul>
                                <li><span>time:</span>@evnt.StartTime - @evnt.EndTime</li>
                                <li><span>venue</span>@evnt.Venue</li>
                            </ul>
                            <div class="event-content-right">
                                <a class="default-btn" asp-controller="Event" asp-action="Detail">join now</a>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<!-- Event Area End -->
<!-- Blog Area Start -->
@foreach (Blog blog in Model.Blogs)
{
    <div class="blog-area pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="section-title text-center">
                        <img src="~/img/icon/section.png" alt="section-title">
                        <h2>LATEST FROM BLOG</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-blog">
                        <div class="blog-img">
                            <a asp-controller="Blog" asp-action="Index"><img src="~/img/blog/@blog.Photo" alt="blog"></a>
                            <div class="blog-hover">
                                <a asp-controller="Blog" asp-action="Index"><i class="fa fa-link"></i></a>
                            </div>
                        </div>
                        <div class="blog-content">
                            <div class="blog-top">
                                <p>@blog.Name  /  @blog.DateTime  /  <i class="fa fa-comments-o"></i> @blog.IconComment</p>
                            </div>
                            <div class="blog-bottom">
                                <h2><a asp-controller="Blog" asp-action="Index"> @blog.Title </a></h2>
                                <a asp-controller="Blog" asp-action="Index">read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<!-- Blog Area End -->
